<view class="cu-bar bg-red search">
    <!-- <view class="cu-avatar round" style="background-image:url(https://image.weilanwl.com/img/square-1.jpg);"></view> -->
    <!-- <image class="cu-avatar round bg-white" src="/images/icon_cup.png"></image> -->
    
    <view class="action">
        <text>南宁</text>
        <text class="cuIcon-triangledownfill"></text>
    </view>
    <view class="search-form radius">
        <text class="cuIcon-search"></text>
        <input type="text" placeholder="搜索咖啡、美食、生活" confirm-type="search"></input>
    </view>
    
    <view class="action">
        <!-- <text>南宁</text> -->
        <text class="cuIcon-notice"></text>
    </view>
</view>

<view class="cu-list grid col-{{gridCol}} {{gridBorder?'':'no-border'}}" style="background-color: var(--ghostWhite);">
    <view class="cu-item  " style="border-radius:50%" wx:for="{{iconList}}"  wx:key wx:if="{{index<gridCol*2}}">
        <view class="cuIcon-{{item.icon}} text-{{item.color}}">
            <view class="cu-tag badge " wx:if="{{item.badge!=0}}">
                <block wx:if="{{item.badge!=1}}">{{item.badge>99?"99+":item.badge}}</block>
            </view>
        </view>
        <text>{{item.name}}</text>
    </view>
</view>

<view class=" padding-lr  ">
    <swiper class=" " indicator-dots="{{false}}" circular="false" autoplay="true" interval="5000"
        duration="500" style="height:235rpx">
        <swiper-item class=" block " wx:for="{{swiperList}}" wx:key="index">
            <image class="block radius" style="width: 100%;" src="{{item}}" mode="widthFix" ></image>
        </swiper-item>
    </swiper>
</view>

<view class=" padding-lr ">
    <view class=" ">
        <!-- <view class="cu-bar bg-white solid-bottom ">
