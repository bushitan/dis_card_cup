}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;

  position: absolute;
}

.placeholder{
    color:#ffaa4f,
}


.bg{
    position: absolute;
    width: 100%;
    left: 0;
    right: 0;
    z-index: -999;
}
.logo{
    width:100px;
    border-radius: 50%;
}


.sign{
    
    position: absolute;
    width: 100%;
    left: 0;
    right: 0;
    bottom:10px;
}

.box{
    position: relative;
}

.price-input{
    color:white;
}


.member_box{

    border-radius: 50%;
    overflow: hidden;
    width: 40px;
    height: 40px;
}
.member_icon{
    width: 40px;
    height: 40px;
    display: block;
}



